<div id="stock-import-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">{{::vm.translate.get('Add Stock')}}</h4>
            </div>
            <div class="modal-body">
                <form name="addStockForm" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-xs-4 control-label">Supplier</label>
                        <div class="col-xs-6">
                            <select class="form-control" ng-model="vm.stockImport.supplierId" ng-options="supplier.id as supplier.name for supplier in vm.suppliers"></select>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-xs-4 control-label">Quantity</label>
                        <div class="col-xs-6">
                            <input type="number" class="form-control" ng-model="vm.stockImport.quantity" required />
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-xs-4 control-label">Cost</label>
                        <div class="col-xs-6">
                            <input type="number" class="form-control" ng-model="vm.stockImport.cost" required />
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-xs-4 control-label">New Price</label>
                        <div class="col-xs-6">
                            <input type="number" class="form-control" ng-model="vm.stockImport.newPrice" required />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" ng-disabled="addStockForm.$pristine" class="btn btn-primary" data-dismiss="modal" ng-click="vm.importStock()">
                    {{::vm.translate.get('OK')}}
                </button>
            </div>
        </div>
    </div>
</div>
