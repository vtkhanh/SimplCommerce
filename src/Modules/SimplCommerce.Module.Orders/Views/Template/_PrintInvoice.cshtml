<div id="print-invoice" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">{{::vm.translate.get('Print invoice')}}</h4>
            </div>
            <div class="modal-body">
                <div id="invoice-print-content" class="table-responsive">
                    <h3 class="text-center">KK Beauty</h3>
                    <hr />
                    <div>
                        <div class="text-right">
                            <label>Facebook:</label>
                            <span>KK.Beauty.Box</span>
                        </div>
                        <div class="text-right">
                            <label>Phone:</label>
                            <span>0985 979 515</span>
                        </div>
                    </div>
                    <br />
                    <div>
                        <label>{{::vm.translate.get('Khach hang')}}:</label>
                        <span>{{::vm.customer.display}}</span>
                    </div>
                    <div>
                        <label>{{::vm.translate.get('Phuong thuc thanh toan')}}:</label>
                        <span>{{::vm.paymentProvider}}</span>
                    </div>
                    <div>
                        <label>{{::vm.translate.get('Van don')}}:</label>
                        <span>{{::vm.trackingNumber}}</span>
                    </div>
                    <br />
                    <table class="table table-striped table-condensed vertical-align-middle">
                        <thead>
                            <tr>
                                <th class="col-sm-2">{{::vm.translate.get('San pham')}}</th>
                                <th class="col-sm-1 text-center">{{::vm.translate.get('Gia')}}</th>
                                <th class="col-sm-1 text-center">{{::vm.translate.get('Sl')}}</th>
                                <th class="col-sm-1 text-center">{{::vm.translate.get('Tong')}}</th>
                            </tr>
                        </thead>
                        <tbody ng-show="vm.orderItems.length" class="cart-list">
                            <tr ng-repeat="item in vm.orderItems">
                                <td class="col-sm-2">{{item.productName}}</td>
                                <td class="col-sm-1 text-center">{{item.productPrice.toCurrency()}}</td>
                                <td class="col-sm-1 text-center">{{item.quantity}}</td>
                                <td class="col-sm-1 text-center">{{item.subTotal.toCurrency()}}</td>
                            </tr>
                            <tr class="order-summary active">
                                <td class="col-sm-2">{{::vm.translate.get("Tong")}}:</td>
                                <td class="col-sm-1"></td>
                                <td class="col-sm-1"></td>
                                <td class="col-sm-1 text-center">{{vm.orderSubTotal.toCurrency()}}</td>
                            </tr>
                            <tr class="active">
                                <td class="col-sm-2">{{::vm.translate.get("Giam")}}:</td>
                                <td class="col-sm-1"></td>
                                <td class="col-sm-1"></td>
                                <td class="col-sm-1 text-center">{{vm.discount.toCurrency()}}</td>
                            </tr>
                            <tr class="active">
                                <td class="col-sm-2">{{::vm.translate.get("Phi Ship")}}:</td>
                                <td class="col-sm-1"></td>
                                <td class="col-sm-1"></td>
                                <td class="col-sm-1 text-center">{{vm.shippingAmount.toCurrency()}}</td>
                            </tr>
                            <tr class="success">
                                <td class="col-sm-2">{{::vm.translate.get("Thanh toan")}}:</td>
                                <td class="col-sm-1"></td>
                                <td class="col-sm-1 text-center"><b></b></td>
                                <td class="col-sm-1 text-center"><b>{{vm.orderTotal.toCurrency()}}</b></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    {{::vm.translate.get('Close')}}
                </button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="vm.printInvoice('invoice-print-content')">
                    {{::vm.translate.get('Print')}}
                </button>
            </div>
        </div>
    </div>
</div>
