<div id="change-multiple-status" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">{{::vm.translate.get('Update status')}}</h4>
            </div>
            <div class="modal-body">
                <form name="updateStatusesForm" class="form-horizontal">
                    <div class="form-group" ng-if="!vm.hasOrdersSelected()">
                        <label class="col-xs-4 control-label error">{{::vm.translate.get('No orders selected!')}}</label>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-2 col-xs-offset-2 control-label">{{::vm.translate.get('Change to')}}</label>
                        <div class="col-xs-6">
                            <select ng-model="vm.selectedStatus" ng-options="option.name for option in vm.orderStatus track by option.id"
                                    class="form-control" ng-disabled="!vm.hasOrdersSelected()">
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    {{::vm.translate.get('Close')}}
                </button>
                <button type="button" ng-if="vm.hasOrdersSelected()" ng-disabled="updateStatusesForm.$pristine" class="btn btn-primary" data-dismiss="modal" 
                        ng-click="vm.updateMultipleStatuses()">
                    {{::vm.translate.get('Save')}}
                </button>
            </div>
        </div>
    </div>
</div>
