<div class="form-group">
    <div class="col-sm-6 col-xs-8">
        <md-autocomplete ng-disabled="!vm.canEdit" 
                         required="required" md-input-name="customer" md-no-cache="false" md-autoselect="true"
                         md-selected-item="vm.customer" md-search-text="vm.customerQuery" md-items="item in vm.searchCustomers(vm.customerQuery)"
                         md-item-text="item.display" md-min-length="0" md-floating-label="{{::vm.translate.get('Search customers')}}">
            <md-item-template>
                <span md-highlight-text="vm.customerQuery" md-highlight-flags="gi">{{item.display}}</span>
            </md-item-template>
            <div ng-messages="orderForm.customer.$error" class="md-block">
                <div ng-message="required">Customer is required</div>
            </div>
            <md-not-found>
                No customer "{{vm.customerQuery}}" were found.
            </md-not-found>
        </md-autocomplete>
    </div>
    <div class="col-sm-6 col-xs-8">
        <md-autocomplete ng-disabled="!vm.canEdit"
                         style="min-width: 0;"
                         md-autofocus md-no-cache="false" md-autoselect="true"
                         md-selected-item="vm.selectedProduct" md-selected-item-change="vm.addToCart(vm.selectedProduct)"
                         md-search-text="vm.productQuery" md-select-on-match="true" md-items="item in vm.searchProducts(vm.productQuery)"
                         md-item-text="item.display" md-min-length="0" md-floating-label="{{::vm.translate.get('Search products')}}"
                         ng-keypress="($event.charCode==13) ? vm.addToCart(vm.selectedProduct) : return">
            <md-item-template>
                <span md-highlight-text="vm.productQuery" md-highlight-flags="gi">{{item.display}}</span>
            </md-item-template>
            <md-not-found>
                No product "{{vm.productQuery}}" were found.
            </md-not-found>
        </md-autocomplete>
    </div>
</div>
